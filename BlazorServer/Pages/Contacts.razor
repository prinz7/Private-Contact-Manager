@page "/contacts"
@using Data;

<PageTitle>Contacts</PageTitle>

<h1>Contacts</h1>

<p></p>

<RadzenDataGrid @ref="contactGrid" AllowFiltering="true" AllowColumnResize="true" FilterMode="FilterMode.Simple" AllowSorting="true" PageSize="10" AllowPaging="true" PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true"
    Data="@contacts" TItem="Contact" ColumnWidth="300px" LogicalFilterOperator="LogicalFilterOperator.Or">
    <Columns>
        <RadzenDataGridColumn TItem="Contact" Property="Forename" Filterable="false" Title="Vorname" Frozen="true" Width="170px" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="Contact" Property="Surname" Filterable="false" Title="Nachname" Frozen="true" Width="170px" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="Contact" Property="Birthday" Filterable="false" Title="Geburtsdatum" Frozen="true" Width="170px" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="Contact" Property="Organization" Filterable="false" Title="Organization" Frozen="true" Width="170px" TextAlign="TextAlign.Center" />
    </Columns>
</RadzenDataGrid>

<button class="btn btn-primary" @onclick="AddContact">Add contact</button>

@code {
    RadzenDataGrid<Contact> contactGrid = new RadzenDataGrid<Contact>();
    IList<Contact> contacts = new List<Contact>()
    {
        new Contact()
        {
            Forename = "Hans",
            Surname = "Zimmer",
            Organization = "Wiener Opernhaus",
            BirthdayDay = 17,
            BirthdayMonth = 1,
            BirthdayYear = 1999
        }
    };

    public void AddContact()
    {
        contacts.Add(new Contact()
        {
            Forename = "Hans",
            Surname = "Zimmer",
            Organization = "Wiener Opernhaus",
            BirthdayDay = 17,
            BirthdayMonth = 1,
            BirthdayYear = 1999
        });

        contactGrid.Reload();
    }
}
